<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.ricardo.lector">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icono"
        android:label="@string/app_name">

        <activity android:name="es.ricardo.lector.IntroActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="1"/>
            </intent-filter>
        </activity>
        <activity
            android:name="es.ricardo.lector.CamaraActivity"
            android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="2" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.ricardo.lector.ResultadoActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomTheme"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="3" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.ricardo.lector.ConfirmacionActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomTheme"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="4" />
            </intent-filter>
        </activity>

        <service android:name="es.ricardo.servicio.Servicio"
            android:exported="false"
            android:enabled="true">
            <intent-filter>
                <action android:name="servicioLanzamiento_LITE"></action>
            </intent-filter>
        </service>

        <receiver android:permission="android.permission.RECEIVE_BOOT_COMPLETED"
            android:name="es.ricardo.servicio.Escuchador"
            android:enabled="true" >
            <intent-filter >
                <action android:name="android.intent.action.BOOT_COMPLETED" >
                    <!--   ////		DESCOMENTAR PARA DEPURAR		//////
                                 <action android:name="Escuchador">     -->
                    <category android:name="android.intent.category.HOME" ></category>
                </action>
            </intent-filter>
        </receiver>


    </application>

</manifest>